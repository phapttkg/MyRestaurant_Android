<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F1F1F1"
tools:context=".activityuser.Update_inforUSActivity">
<ImageView
    android:id="@+id/vien"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-46dp"
    android:layout_marginTop="-75dp"
    android:contentDescription="TODO"
    android:src="@drawable/logo"></ImageView>
<ImageView
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/back"
    android:layout_marginTop="15dp"></ImageView>

<TextView
    android:id="@+id/avatar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    android:fontFamily="@font/roboto"
    android:text="UPDATE USER"
    android:textSize="25dp"
    android:textStyle="bold" />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="150dp"
    android:textSize="20dp"
    android:id="@+id/edtFullname"
    android:background="@drawable/fullname"></EditText>
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textSize="20dp"
    android:id="@+id/edtPhone"
    android:layout_below="@id/edtFullname"
    android:background="@drawable/phone"></EditText>

<Spinner
    android:id="@+id/spGender"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:textSize="20dp"
    android:background="@drawable/gender"
    android:layout_below="@+id/edtPhone"/>

<Button
    android:id="@+id/btnCancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/spGender"
    android:layout_marginLeft="70dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/cancel1"></Button>

<Button
    android:id="@+id/btnOK"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/spGender"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_toRightOf="@id/btnCancel"
    android:background="@drawable/ok1"></Button>
</RelativeLayout>
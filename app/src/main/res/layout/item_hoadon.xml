<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="15dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgnen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hoadonnen"></ImageView>


        <ImageView
            android:id="@+id/imagefoodhd1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="false"
            android:layout_marginLeft="25dp"
            android:background="@drawable/food"></ImageView>

        <TextView
            android:id="@+id/tvTenHD"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imagefoodhd1"
            android:fontFamily="@font/roboto"
            android:text="đơn hàng"
            android:textColor="#000"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/tvhttt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenHD"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imagefoodhd1"
            android:text="COD"
            android:textColor="#8F8383"
            android:textSize="15dp"></TextView>
        <TextView
            android:id="@+id/tvdchd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imagefoodhd1"
            android:text="dia chi"
            android:layout_below="@id/tvhttt"
            android:textColor="#8F8383"
            android:textSize="15dp"
            ></TextView>

        <TextView
            android:id="@+id/tvGiahd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvdchd"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imagefoodhd1"
            android:text="1.000.000 VNĐ"
            android:textColor="#F44336"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvNgayhd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagefoodhd1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:text="11-12-2019"
            android:textColor="#4CAF50"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/vien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-46dp"
        android:layout_marginTop="-75dp"
        android:contentDescription="TODO"
        android:src="@drawable/logo"></ImageView>


    <ImageView
        android:id="@+id/imagefoodlma"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="#000"></ImageView>



    <EditText
        android:id="@+id/edtTenLoailma"
        android:layout_below="@id/imagefoodlma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/tenloai"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/edtTenLoailma"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancellma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtTenLoailma"
            android:layout_marginRight="20dp"
            android:background="@drawable/cancel1"></Button>

        <Button
            android:id="@+id/btnOKlma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtTenLoailma"
            android:layout_toRightOf="@id/btnCancellma"
            android:background="@drawable/ok1"></Button>
    </LinearLayout>

</RelativeLayout>
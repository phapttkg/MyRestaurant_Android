<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragmentadmin.UnpaidFragment">


    <TextView
        android:id="@+id/hoadondmad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="BILL"
        android:textSize="25dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/edtSearchmhd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:fontFamily="@font/roboto"
        android:layout_marginRight="20dp"
        android:background="@drawable/search1"
        android:hint="Mã Hóa Đơn"
        android:textAlignment="viewStart"
    ></EditText>

    <Button
        android:id="@+id/btnsearchmhd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/search"></Button>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerbillad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hoadondmad"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="15dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
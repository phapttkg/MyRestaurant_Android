<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityuser.ThanhToan_Activity"
    android:background="#F1F1F1">
    <ImageView
        android:id="@+id/imgnen"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/nen2"></ImageView>

    <ImageView
        android:id="@+id/imgbackt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/back"></ImageView>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgnen"
        android:layout_marginLeft="40dp"
        android:text="ĐỊA CHỈ"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nendiachi"
        android:src="@drawable/diachi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tvAddress"></ImageView>

    <EditText
        android:id="@+id/edtdiachi"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvAddress"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:hint="Nhập địa chỉ ........"
        android:textSize="20dp"
        ></EditText>

    <TextView
        android:id="@+id/tvthanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nendiachi"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="9dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:text="Phương thức thanh toán"
        android:textSize="20dp"></TextView>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nenthanhtoan"
        android:id="@+id/spnthanhtoan"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvthanhtoan"
        android:layout_marginTop="10dp"></Spinner>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvthanhtoan"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/tick"></ImageView>
    <Button
        android:id="@+id/btnPay"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pay"></Button>
</RelativeLayout>